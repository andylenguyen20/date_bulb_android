<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.OutOfIdeasFragment">


    <ImageView
        android:id="@+id/lightbulb"
        android:layout_width="220dp"
        android:layout_height="229dp"
        android:layout_centerVertical="true"
        android:layout_marginBottom="17dp"
        android:layout_marginEnd="82dp"
        android:layout_marginLeft="82dp"
        android:layout_marginRight="82dp"
        android:layout_marginStart="82dp"
        android:adjustViewBounds="true"
        android:contentDescription="Icon made by Freepik from www.falticon.com"
        android:cropToPadding="true"
        android:scaleType="fitCenter"
        android:src="@drawable/lightbulb_idea"
        android:visibility="visible"
        app:layout_constraintBottom_toTopOf="@+id/out_of_ideas_text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed" />

    <TextView
        android:id="@+id/out_of_ideas_text"
        android:layout_width="337dp"
        android:layout_height="38dp"
        android:layout_marginEnd="23dp"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="23dp"
        android:layout_marginStart="24dp"
        android:text="Out of ideas!"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textFontWeight="bold"
        android:textSize="30dp"
        app:layout_constraintBottom_toTopOf="@+id/refresh_ideas_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lightbulb" />

    <ImageButton
        android:id="@+id/refresh_ideas_button"
        android:layout_width="64dp"
        android:layout_height="52dp"
        android:layout_centerVertical="true"
        android:layout_marginBottom="63dp"
        android:layout_marginEnd="151dp"
        android:layout_marginLeft="151dp"
        android:layout_marginRight="151dp"
        android:layout_marginStart="151dp"
        android:layout_marginTop="10dp"
        android:adjustViewBounds="true"
        android:background="@null"
        android:scaleType="fitCenter"
        android:src="@drawable/reload"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/out_of_ideas_text" />

</android.support.constraint.ConstraintLayout>
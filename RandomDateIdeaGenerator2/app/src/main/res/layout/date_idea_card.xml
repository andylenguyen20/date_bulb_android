<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/date_card_thumbnail"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight=".25"
                android:adjustViewBounds="true"
                android:maxHeight="80dp"
                android:scaleType="fitCenter"
                android:src="@drawable/no_photos" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="113dp"
                android:layout_weight=".55"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/date_card_label"
                    android:layout_width="match_parent"
                    android:layout_height="39dp"
                    android:layout_gravity="center_vertical" />

                <TextView
                    android:id="@+id/address_card_text"
                    android:layout_width="match_parent"
                    android:layout_height="37dp"
                    android:layout_gravity="center_vertical" />

                <TextView
                    android:id="@+id/phone_number_card_text"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:layout_gravity="center_vertical" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="113dp"
                android:layout_weight=".2"
                android:orientation="vertical">

                <ToggleButton
                    android:id="@+id/favorite_button"
                    style="@style/toggleButton"
                    android:layout_width="match_parent"
                    android:layout_height="41dp"
                    android:adjustViewBounds="true"
                    android:background="@drawable/ic_toggle_bg"
                    android:scaleType="fitCenter" />

                <View
                    android:id="@+id/divider2"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:background="@null" />

                <ImageButton
                    android:id="@+id/delete_button"
                    android:layout_width="match_parent"
                    android:layout_height="41dp"
                    android:adjustViewBounds="true"
                    android:background="@null"
                    android:scaleType="fitCenter"
                    app:srcCompat="@drawable/garbage" />
            </LinearLayout>

        </LinearLayout>

        <TextView
            android:id="@+id/attribution_card_field"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:linksClickable="true"/>

    </LinearLayout>


</android.support.v7.widget.CardView>